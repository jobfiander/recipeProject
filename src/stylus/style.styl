@import 'nib'
// @import 'bootstrap'

primaryColor = rgb(90, 199, 77)

body
	background: white
	color: black
	padding: 0px
	margin: 0px
	font-family: 'Helvetica Neue', Helvetica, sans-serif
	font-rendering: optimizeLegibility

.recipeCategories
	absolute top left bottom
	width 440px
	background rgb(48, 51, 58)
	color white
	font-size 24px
	
	.recipeAppBox
		background primaryColor
		text-align center
		padding-top 60px
		padding-bottom 60px
		
		button
			absolute top 10px left 10px
	
	.categories
		padding-top 80px
		text-align center
		font-size 1.4em
		color rgb(125, 128, 143)
		
		.category
			margin-bottom 25px
			cursor pointer
			
			&:hover
				text-decoration none
				color white
			
			&.active
				color white
				cursor default
				text-decoration none

.recipeView
	margin-left 460px
	position relative

.recipeList
	margin-top 60px
	margin-left 560px
	text-align left
	
	.recipeListItem
		background rgb(49, 50, 58)
		color white
		display inline-block
		max-width 368px
		text-align center
		margin 20px
		// position relative
		// overflow hidden
		// borderRadius = 8px
		// border-radius borderRadius
		// transform translate(0px, 0px)
		// transform-origin 50% 50%
		// backface-visibility hidden
		
		h2
			cursor pointer
			margin-bottom 0px
			margin-top 15px
			font-size 2.4em
			text-transform uppercase

		.recipeListItemImage
			width 368px
			height 252px
			background transparent
			background-size 100% auto
			background-size cover
			background-position center
			// background-size cover
			position relative
			// // margin-bottom 20px
			// border-top-left-radius borderRadius
			// border-top-right-radius borderRadius

			.heart
				background transparent url('/images/hearts.png') no-repeat
				width (50px / 2)
				height 22px
				display inline-block
				margin-left 20px
				margin-top 20px
				absolute top left
				background-position -@width 0px
				cursor pointer
				
				&.full
					background-position 0px 0px
		
		.recipeListItemInfo
			display block
			padding 20px 0px
			
			.categories
				color rgb(106, 110, 128)
				font-size 1.6em
				
			.serving
				background transparent url('/images/people.png') no-repeat
				display inline-block
				padding-left 40px
				height 26px
				margin-top 15px
				margin-left 35px
				margin-right auto
				font-size 26px
				line-height 28px
			.prepTime
				background transparent url('/images/bolt.png') no-repeat
				display inline-block
				padding-left 24px
				height 26px
				margin-top 15px
				margin-left auto
				margin-right auto
				font-size 26px
				line-height 24px

		.fade
			// height 100px
			absolute bottom left right
			background linear-gradient(top, rgba(255,255,255, 0), rgba(255,255,255, 1))
			padding-top 40px
			padding-bottom 20px
		
		img
			width 100%

.rating-control
	.star
		background transparent url('/images/stars.png') no-repeat
		width (57px / 3)
		height 18px
		display inline-block
		margin-right 5px
		background-position -(@width * 2) 0px
		
		&.full
			background-position 0px 0px
		
		&:last-child
			margin-right 0px
			
		&:hover
			cursor pointer
			// background-position 0px 0px
			

.recipeView
	text-align center
	padding 10px
	
	.recipeDirections
		font-size 20px
		max-width 900px
		padding-bottom 25px
		margin-right auto
		margin-left auto
		
	img
		border-radius 4px
		box-shadow 0px 1px 5px rgba(0,0,0,0.1)
		max-width 100%
	
.IngredientsList
	display table
	text-align left
	margin-right auto
	margin-left auto
	
	.ingredient
		display table-row
	
	.ingredientIcon
		display table-cell
	
	.ingredienttext
		display table-cell
		padding-left 20px
		
.closeButton
	absolute top left
	padding 15px
	cursor pointer
	