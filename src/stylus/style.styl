@import 'nib'
// @import 'bootstrap'

body
	background: white
	color: black
	padding: 0px
	margin: 0px
	font-family: 'Helvetica Neue', Helvetica, sans-serif
	font-rendering: optimizeLegibility

.recipeList
	margin 10px
	text-align center
	
	.recipeListItem
		// padding 10px
		display inline-block
		max-width 480px
		text-align center
		border-radius 4px
		box-shadow 0px 1px 5px rgba(0,0,0,0.1)
		margin-left 10px
		
		h2
			cursor pointer
			margin-bottom 10px

		.recipeListItemImage
			width 480px
			height 320px
			background-size cover
			border-top-left-radius 4px
			border-top-right-radius 4px
			position relative
			// margin-bottom 20px

		.fade
			// height 100px
			absolute bottom left right
			background linear-gradient(top, rgba(255,255,255, 0), rgba(255,255,255, 1))
			padding-top 40px
			padding-bottom 20px
		
		img
			width 100%

.rating-control
	.fa
		margin-right 5px
		
		&:last-child
			margin-right 0px

.recipeView
	text-align center
	padding 10px
	
	.recipeDirections
		font-size 20px
		max-width 900px
		padding-bottom 25px
		margin-right auto
		margin-left auto
		
	img
		border-radius 4px
		box-shadow 0px 1px 5px rgba(0,0,0,0.1)
	
.IngredientsList
	display table
	text-align left
	margin-right auto
	margin-left auto
	
	.ingredient
		display table-row
	
	.ingredientIcon
		display table-cell
	
	.ingredienttext
		display table-cell
		padding-left 20px
		
.closeButton
	absolute top left
	padding 15px
	cursor pointer
	