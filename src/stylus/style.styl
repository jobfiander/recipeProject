@import 'nib'
// @import 'bootstrap'

primaryColor = rgb(90, 199, 77)

body
	background: white
	color: black
	padding: 0px
	margin: 0px
	font-family: 'Helvetica Neue', Helvetica, sans-serif
	font-rendering: optimizeLegibility

.application
	position relative
	min-height 100%

.recipeCategories
	absolute top left bottom
	width 440px
	background rgb(48, 51, 58)
	color white
	font-size 24px
	
	.recipeAppBox
		background primaryColor
		text-align center
		padding-top 60px
		padding-bottom 60px
		
		button
			absolute top 10px left 10px
	
	.categories
		padding-top 80px
		text-align center
		font-size 1.4em
		color rgb(125, 128, 143)
		
		.category
			margin-bottom 25px
			cursor pointer
			
			&:hover
				text-decoration none
				color white
			
			&.active
				color white
				cursor default
				text-decoration none

.recipeView
	margin-left 460px
	position relative
	text-align center

.recipeList
	padding-top 60px
	margin-left 560px
	text-align left
	
	.recipeListItem
		background rgb(49, 50, 58)
		color white
		display inline-block
		max-width 368px
		text-align center
		margin 20px
		// position relative
		// overflow hidden
		// borderRadius = 8px
		// border-radius borderRadius
		// transform translate(0px, 0px)
		// transform-origin 50% 50%
		// backface-visibility hidden
		
		h2
			cursor pointer
			margin-bottom 0px
			margin-top 15px
			font-size 2.4em
			text-transform uppercase

		.recipeListItemImage
			width 368px
			height 252px
			background transparent
			background-size 100% auto
			background-size cover
			background-position center
			// background-size cover
			position relative
			// // margin-bottom 20px
			// border-top-left-radius borderRadius
			// border-top-right-radius borderRadius

			.heart
				background transparent url('/images/hearts.png') no-repeat
				width (50px / 2)
				height 22px
				display inline-block
				margin-left 20px
				margin-top 20px
				absolute top left
				background-position -@width 0px
				cursor pointer
				
				&.full
					background-position 0px 0px
		
		.recipeListItemInfo
			display block
			padding 20px 0px
			
			.categories
				color rgb(106, 110, 128)
				font-size 1.6em
				
			.serving
				background transparent url('/images/people.png') no-repeat
				display inline-block
				padding-left 40px
				height 26px
				margin-top 15px
				margin-left 35px
				margin-right auto
				font-size 26px
				line-height 28px
				
			.prepTime
				background transparent url('/images/bolt.png') no-repeat
				display inline-block
				padding-left 24px
				height 26px
				margin-top 15px
				margin-left auto
				margin-right auto
				font-size 26px
				line-height 24px

		.fade
			// height 100px
			absolute bottom left right
			background linear-gradient(top, rgba(255,255,255, 0), rgba(255,255,255, 1))
			padding-top 40px
			padding-bottom 20px
		
		// img
		// 	width 100%

.rating-control
	
	.star
		background transparent url('/images/stars.png') no-repeat
		width (57px / 3)
		height 18px
		display inline-block
		margin-right 5px
		background-position -(@width * 2) 0px
		
		&.full
			background-position 0px 0px
		
		&:last-child
			margin-right 0px
			
		&:hover
			cursor pointer
			// background-position 0px 0px
			
.recipeContainer
	margin-left 480px
	padding-top 120px

	.recipeView
		text-align left
		padding 10px
		padding-left 40px
		background rgb(49, 50, 58)
		max-width 1200px
		margin-left auto
		margin-right auto
		padding-bottom 40px
		color white
		
		input
			background rgb(62, 63, 73)
			border 1px solid rgb(85, 87, 98)
			padding 10px
			font-size 1.8em
			color white
			font-family: 'Helvetica Neue', Helvetica, sans-serif
		
		.recipeName
			font-size 2.4em
			text-transform uppercase
			padding 10px
			background rgb(62, 63, 73)
			border 1px solid rgb(85, 87, 98)
			color white
			width 450px
		
		.recipeField
			width 450px
			
		.label
			margin-top 45px
			font-size 24px
			margin-bottom 12px
			color rgb(125, 128, 143)
		
		.ratingContainer
			margin-left 70px
			margin-top 50px
			display inline-block
			font-size 20px
			
			.rating-control
				margin-left 10px
				display inline-block
			
		.heart
			background transparent url('/images/hearts.png') no-repeat
			width (50px / 2)
			height 22px
			display inline-block
			margin-left 35px
			margin-top 60px
			absolute top left
			background-position -@width 0px
			cursor pointer
			
			&.full
					background-position 0px 0px
						
		.recipeIntro
			width 100%
			display table
			
			.recipeForm
				display table-cell
				vertical-align top
				width 450px
				
			.recipePhoto
				display table-cell
				vertical-align top
				
				img
					relative top -20px right -50px
					box-shadow 0px 1px 5px rgba(0,0,0,0.1)
					max-width 730px
					max-height 490px
			
			.recipeDetails
				text-align left
				padding-left 50px
					
				.serving
					background transparent url('/images/people.png') no-repeat
					display inline-block
					background-position bottom left
					height 26px
					font-size 26px
					line-height 28px
					padding-left 40px

.recipeContent
	padding-top 15px
	// text-align center
	display table
	width 100%
	
	h2
			font-size 36px
			margin-bottom 35px
			margin-top 20px
			display inline-block
	
	.fa-pencil
		display inline-block
		padding-top 30px
		font-size 20px
		float right
		color rgba(255,255,255,0.5)
		
		&.active
			color white
	
	.directionsContainer
		display table-cell
		width 100%
		padding-right 60px
		
		.recipeDirections
			vertical-align top
			font-size 26px
			margin-left 60px
			padding-bottom 25px
			display table-cell
			
		.textWrapper
			margin-left -11px
			margin-right -11px
			margin-top -11px
		
		textarea
			display block
			resize none
			font-size 26px
			padding 10px
			background rgb(62, 63, 73)
			border 1px solid rgb(85, 87, 98)
			box-sizing border-box
			color white
			min-width 100%
			min-height 324px
			font-family: 'Helvetica Neue', Helvetica, sans-serif
	
	.ingredientsContainer
		display table-cell
		width 450px
		padding-right 50px
		
		.IngredientsList
			font-size 26px
			text-align left
			width 450px
			
			.ingredient
				
				input
					width 100%
					font-size 26px
			
			.ingredientText
				padding-left 0px
				padding-bottom 15px
				background rgb(62, 63, 73)
				border 1px solid rgb(85, 87, 98)
				padding 10px
				color white
				
			.btn
				padding-bottom 15px
				background rgb(62, 63, 73)
				border 1px solid rgb(85, 87, 98)
				padding 10px
				color white
				font-size 24px
				font-family: 'Helvetica Neue', Helvetica, sans-serif
				width 450px
				text-align left
				outline none
				
				&:hover:active
					background darken(rgb(62, 63, 73), 15%)
					
				
				.fa-plus
					padding-right 10px
		h2
			margin-bottom 24px

						
	
.closeButton
	absolute top 60px left
	padding 5px
	cursor pointer
	color rgb(120, 195, 94)
	margin-left 560px
	font-size 20px
	